@model LMS.Models.Author

@{
    ViewBag.Title = "Author";
	ViewBag.TitleSmall = "Delete";
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Are you sure you want to delete this?</h3>
            </div>

            @using (Html.BeginForm())
            {
                <div class="box-body">

                    @Html.AntiForgeryToken()
					<dl class="dl-horizontal">
						<dt>
							@Html.DisplayNameFor(model => model.FirstName)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.FirstName)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.MiddleName)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.MiddleName)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.LastName)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.LastName)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.LastUpdatedBy)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.LastUpdatedBy)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.LastUpdated)
						</dt>

						<dd>
							@Html.DisplayFor(model => model.LastUpdated)
						</dd>

                </div>
                <div class="box-footer">
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Index")"><i class="fa fa-angle-double-left"> </i> Back to List</a>
                    <button type="submit" class="btn btn-danger pull-right"><i class="fa fa-trash"></i> Delete</button>
                </div>
            }
        </div>
    </div>
</div>
